<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >          
<hibernate-mapping>
	<class name="com.albert.bs.model.Delivery" catalog="bookstore" table="delivery" dynamic-insert="true" dynamic-update="true">
		<id name="deliveryId" type="string" column="deliveryid">
			<generator class="uuid.hex"></generator>
		</id>
		<property name="deliveryType" column="deliverytype" type="string"></property>
		<property name="description" column="description" type="string"></property>
	</class>
</hibernate-mapping>