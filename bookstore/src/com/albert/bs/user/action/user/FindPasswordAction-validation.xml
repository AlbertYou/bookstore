<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC 
  		"-//OpenSymphony Group//XWork Validator 1.0.2//EN" 
  		"http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>
	<field name="username">
		<field-validator type="requiredstring" short-circuit="true">
			<param name="trim">true</param>
			<message>${getText("username.isnull") }</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="minLength">2</param>
			<param name="maxLength">10</param>
			<message>${getText("username.error") }</message>
		</field-validator>
	</field>
	<field name="email">
		<field-validator type="requiredstring" short-circuit="true">
			<param name="trim">true</param>
			<message>${getText("email.isnull") }</message>
		</field-validator>
		<field-validator type="email">
			<message>${getText("email.error") }</message>
		</field-validator>
	</field>
	<field name="validcode">
		<field-validator type="requiredstring" short-circuit="true">
			<param name="trim">true</param>
			<message>${getText("validcode.isnull") }</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="minLength">4</param>
			<param name="maxLength">4</param>
			<message>${getText("validationcode.error") }</message>
		</field-validator>
	</field>
</validators>